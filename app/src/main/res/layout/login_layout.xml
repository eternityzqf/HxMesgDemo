<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <EditText
        android:id="@+id/login_nickname_edit"
        style="@style/warp_size15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@null"
        android:hint="@string/login_ed_name_hint_string"
        android:inputType="text"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_13" />

    <EditText
        android:id="@+id/login_psw_edit"
        style="@style/warp_size15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@null"
        android:hint="@string/login_ed_psw_hint_string"
        android:inputType="text"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_13" />

    <Button
        android:id="@+id/login_sure_btn"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/register_btn_bg"
        android:text="@string/sure_login_btn_str"
        android:textColor="@color/title_color"
        android:textSize="@dimen/sp_13" />
</LinearLayout>