<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorPrimaryDark">@color/title_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="main_show_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/main_show_tv_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <!--宽高warp_字体17spTextView-->
    <style name="warp_size17">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_17sp</item>
    </style>
    <!--宽高warp_字体16spTextView-->
    <style name="warp_size16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>
    <!--宽高warp_字体15spTextView-->
    <style name="warp_size15">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>
    <!--宽高warp_字体13spTextView-->
    <style name="warp_size13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>
    <!--宽高warp_字体14spTextView-->
    <style name="warp_color_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--宽高warp_字体白颜色15spTextView-->
    <style name="warp_size15_colorwhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_15sp</item>
    </style>
    <!--宽match 高1dp灰色的线-->
    <style name="width_match_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!--宽1dp 高match灰色的线-->
    <style name="height_match_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!--宽match 高0.5dp灰色的线-->
    <style name="width_match_dian5ine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!--宽match 高10dp灰色的线-->
    <style name="width_match_dian10ine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/tinge_gray</item>
    </style>
    <!--宽match 高15dp灰色的线-->
    <style name="width_match_dian15line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@color/tinge_gray</item>
    </style>
    <!--宽match 高wrap_content的RelativeLayout-->
    <style name="width_match_dian_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--个人中心宽match 高45dp的TextView-->
    <style name="width_match_50height_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/size_15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_17sp</item>
    </style>
    <!--warpImageView图片-->
    <style name="wrap_height_wrap_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@null</item>
    </style>
    <!--RecycleView style-->
    <style name="comm_recycleview_wrapheight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <!--注册的Linear-->
    <style name="comm_registapp_ll_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--登录的EditStyle-->
    <style name="login_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>
</resources>
